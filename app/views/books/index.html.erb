
<h3>Book 列表页</h3>

<table>
  <tr>
    <td>标题</td>
    <td>作者</td>
    <td>操作</td>
  <tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.title, book %></td>
      <td><%= book.author %></td>
      <td>
        <%= link_to "编辑", edit_book_path(:id => book.id) %>
        <%= link_to "删除", book, :method => :delete  %>
      </td>
    </tr>
  <% end %>
</table>

<br/>

<%= link_to "新建" , new_book_path %>

